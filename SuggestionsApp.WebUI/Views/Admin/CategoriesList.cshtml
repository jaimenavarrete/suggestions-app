@model CategoriesListViewModel
@{
    Layout = "_AdminLayout";

    ViewData["Title"] = "Lista de categorías";
    ViewData["ActivePage"] = ManageAdminNavPages.CategoriesList;
}

<!-- Modal -->
<div class="modal fade" id="form-category-modal" tabindex="-1" aria-labelledby="form-category-modal" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" id="form-category" class="modal-content">
            <div class="modal-header">
                <h5 id="form-category-modal-label" class="modal-title text-primary fw-bold"><i class="las la-plus-circle fs-4"></i> Crear categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" asp-for="Id" id="input-category-id" class="input-category" />

                <div class="form-group">
                    <label class="col-form-label" for="input-name">Nombre de la categoría:</label>
                    <input type="text" asp-for="Name" id="input-category-name" class="form-control input-category">
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary text-dark" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary"><i class="las la-save fs-4"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>

<h1 class="mb-4">Lista de categorías</h1>

<partial name="_StatusMessage" />

<button type="button" id="button-create-category" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#form-category-modal">
    <i class="las la-plus fs-4"></i> Agregar categoría
</button>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr class="table-primary">
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.CategoriesList)
            {
                <tr>
                    <th scope="row">@category.Id</th>
                    <td>@category.Name</td>
                    <td class="d-flex justify-content-center">
                        <button class="button-edit-category bg-transparent border-0 p-0" data-category-id="@category.Id" data-bs-toggle="modal" data-bs-target="#form-category-modal">
                            <i class="las la-pen text-primary fs-3 px-1"></i>
                        </button>
                        <form asp-controller="Admin" asp-action="DeleteCategory" method="post" class="delete-element-form">
                            <input type="hidden" value="@category.Id" name="id" />
                            <button class="bg-transparent border-0 p-0"><i class="las la-trash text-danger fs-3 px-1"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        const btnCreateCategory = document.getElementById('button-create-category');
        const btnEditCategory = document.querySelectorAll('.button-edit-category');
        const form = document.getElementById('form-category');
        const modalCategoryLabel = document.getElementById('form-category-modal-label');

        const getCategoryInfo = (e) => {
            const categoryInfo = e.currentTarget.parentElement.parentElement.children;

            form.elements['Id'].value = categoryInfo[0].outerText;
            form.elements['Name'].value = categoryInfo[1].outerText;
            modalCategoryLabel.innerHTML = `<i class="las la-pen fs-4"></i> Editar categoría`;
        };

        const validateForm = (e) => {};

        form.addEventListener('submit', (e) => {
            e.preventDefault();

            const baseUrl = window.location.origin;

            if (form.elements['Id'].value === '') {
                form.action = `${baseUrl}/Admin/CreateCategory`;
            } else {
                form.action = `${baseUrl}/Admin/EditCategory`;
            }

            form.submit();
        });

        btnCreateCategory.addEventListener('click', () => {
            form.elements['Id'].value = '';
            form.elements['Name'].value = '';
            modalCategoryLabel.innerHTML = `<i class="las la-plus-circle fs-4"></i> Crear categoría`;
        });

        btnEditCategory.forEach((btn) => {
            btn.addEventListener('click', (e) => getCategoryInfo(e));
        });
    </script>
}