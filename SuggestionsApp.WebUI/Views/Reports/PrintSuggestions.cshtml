@model List<PendingSuggestionViewModel>
@{
    Layout = "_ReportsLayout";
}

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Título</th>
        <th scope="col">Descripción</th>
        <th scope="col">Categoría</th>
        <th scope="col">Usuario</th>
        <th scope="col">Fecha</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var suggestion in Model)
    {
        <tr class="small">
            <th scope="row">@suggestion.Id</th>
            <th>@suggestion.Title</th>
            <th>@(suggestion.Description ?? "[Sin descripción]")</th>
            <th>@suggestion.CategoryName</th>
            <th>@suggestion.UserName</th>
            <th><time>@suggestion.Date</time></th>
        </tr>
    }
    </tbody>
</table>